doctype html
html(lang="en")

  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Hasta Kaydet
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi", crossorigin="anonymous")

  body

    .container
      h3 Hasta Bilgileri
      hr
      p.h4.mb-4 Hasta Kaydet

      form(action="/hasta/kaydetHasta", method="POST")
        // Add hidden form field to handle update
        input(type="hidden", name="patientId", value="")
        input(type="text", name="name", class="form-control mb-4 w-25", placeholder="Ad")
        input(type="text", name="surname", class="form-control mb-4 w-25", placeholder="Soyad")
        input(type="text", name="birthDate", class="form-control mb-4 w-25", placeholder="Doğum Tarihi(yyyy-aa-gg)")
        input(type="text", name="gender", class="form-control mb-4 w-25", placeholder="Cinsiyet(Erkek-Kadın)")
        input(type="text", name="phone", class="form-control mb-4 w-25", placeholder="Telefon")
        input(type="text", name="address", class="form-control mb-4 w-25", placeholder="Adres")
        button.btn.btn-info.col-2(type="submit") Kaydet
