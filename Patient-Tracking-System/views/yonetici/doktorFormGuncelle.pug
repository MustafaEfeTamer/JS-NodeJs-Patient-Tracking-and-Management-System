doctype html
html(lang="en")

  head
    // Required meta tags
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")

    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi", crossorigin="anonymous")

    title Doktor Guncelle

  body
    .container
      h3 Doktor Bilgileri
      hr

      p.h4.mb-4 Doktor Guncelle

      form(action="/yonetici/guncelleDoktor", method="POST")
        // Add hidden form field to handle update
        input(type="hidden", name="doctorId",value=doktor)
        input(type="text", name="name", class="form-control mb-4 w-25", placeholder="Ad")
        input(type="text", name="surname", class="form-control mb-4 w-25", placeholder="Soyad")
        input(type="text", name="profession", class="form-control mb-4 w-25", placeholder="Uzmanlık Alanı")
        input(type="text", name="workingHospital", class="form-control mb-4 w-25", placeholder="Çalıştığı Hastane")
        button.btn.btn-info.col-2(type="submit") Kaydet

      hr
      a(href="/yonetici/doktorlar") Doktor Listesine Git
